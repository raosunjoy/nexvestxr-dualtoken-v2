# .env.example
# Copy this file to .env and fill in the values

# General
NODE_ENV=production
PORT=3000

# Database
MONGO_URI=mongodb://admin:admin123@localhost:27017/nexvestxr?authSource=admin
REDIS_URL=redis://localhost:6379

# XRPL Configuration
XRPL_SERVER=wss://s.altnet.rippletest.net:51233
XRPL_ISSUER_SEED=your_xrpl_issuer_seed
XRPL_ISSUER_ADDRESS=your_xrpl_issuer_address

# Flare Network Configuration
FLARE_RPC_URL=https://flare-api.flare.network/ext/bc/C/rpc
FLARE_PRIVATE_KEY=your_flare_private_key
PROPERTY_FACTORY_ADDRESS=your_property_factory_address
PRICE_AGGREGATOR_ADDRESS=your_price_aggregator_address

# XUMM Integration
XUMM_API_KEY=your_xumm_api_key
XUMM_API_SECRET=your_xumm_api_secret

# External Services
COINBASE_API_KEY=your_coinbase_api_key
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_API_KEY=your_pinata_secret_api_key

# Payment Gateways
STRIPE_API_KEY=your_stripe_api_key
MOONPAY_API_KEY=your_moonpay_api_key
MOONPAY_SECRET=your_moonpay_secret
RAMP_API_KEY=your_ramp_api_key
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# DigiLocker KYC
DIGILOCKER_CLIENT_ID=your_digilocker_client_id
DIGILOCKER_CLIENT_SECRET=your_digilocker_client_secret
DIGILOCKER_REDIRECT_URI=https://nexvestxr.com/auth/digilocker/callback

# AI Service
AI_SERVICE_URL=http://ai-service:5000
ENABLE_AI_SERVICE=true

# Support (Intercom)
INTERCOM_APP_ID=your_intercom_app_id

# Security
JWT_SECRET=your_jwt_secret_minimum_64_characters
BCRYPT_ROUNDS=14

# Monitoring
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=https://monitoring.nexvestxr.com

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
NOTIFICATION_EMAIL=alerts@nexvestxr.com

# URLs
API_URL=https://api.nexvestxr.com
FRONTEND_URL=https://nexvestxr.com

# AWS Configuration
AWS_REGION=ap-south-1
AWS_S3_BUCKET=nexvestxr-production-assets
